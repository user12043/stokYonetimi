@{
    ViewBag.Title = headers.stokEkle;
}

@{ ViewData["activePage"] = 1; }
@Html.Partial("Partial/PersonelMenu")
@using stokYonetimi.Language.ModelLang
@using stokYonetimi.Language.PageContents
@model IEnumerable<stokYonetimi.Models.Urun>

<div class="main-content">
    <div class="content">

        <form action="/StokData/StokEkle" method="post">
            <h3>@headers.stokEkle</h3>

            <div class="formContentLeft">
                <div class="form-group">
                    <label for="urunId">@stok.urun:</label>
                    <select id="urunId" class="form-control" name="urunId" size="1">
                        @foreach (var urun in Model) {
                            <option value="@urun.UrunId">@urun.Isim</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="miktar">@stok.miktar:</label>
                    <input class="form-control" id="miktar" name="miktar" type="text"/>
                </div>

                <div class="form-group">
                    <label for="adetFiyat">@stok.adetFiyat:</label>
                    <input class="form-control" type="text" id="adetFiyat" name="adetFiyat"/>
                </div>
            </div>

            <div class="form-group">
                <input class="form-control btn buttons" type="submit" value="@commons.set"/>
            </div>
        </form>
    </div>

</div>