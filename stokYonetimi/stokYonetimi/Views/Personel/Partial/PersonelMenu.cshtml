@using stokYonetimi.Language.PageContents
@{
    string[] links = new string[3];
    links[0] = "href=/Personel/UrunListele";
    links[1] = "href=/Personel/StokListele";
    links[2] = "href=/Personel/MusteriListele";

    var activePage = ViewData["activePage"];
    if (activePage != null) {
        links[((int) activePage)] = "class=active";
    }
}

<nav class="navbar-primary" id="navbar1">
    <a class="btn-expand-collapse" onclick="collapseMenu(1);">
        <span class="glyphicon glyphicon-menu-left"></span>
    </a>
    <ul class="navbar-primary-menu">
        <li>
            <a @links[0]>
                <span class="glyphicon glyphicon-object-align-vertical"></span><span class="nav-label">@personelMenu.urunler</span><span class="glyphicon glyphicon-arrow-right menuArrow"></span>
            </a>
            <a @links[1]>
                <span class="glyphicon glyphicon-th-list"></span><span class="nav-label">@personelMenu.stoklar</span><span class="glyphicon glyphicon-arrow-right menuArrow"></span>
            </a>
            <a @links[2]>
                <span class="glyphicon glyphicon-user"></span><span class="nav-label">@personelMenu.kurumsal</span><span class="glyphicon glyphicon-arrow-right menuArrow"></span>
            </a>
        </li>
    </ul>
</nav>