@{
    ViewBag.Title = "Müşteri Güncelle";
}

@{ ViewData["activePage"] = 2; }
@Html.Partial("Partial/PersonelMenu")

@model stokYonetimi.Models.Musteri

<div class="main-content">
    <div class="content">

        <form action="/MusteriData/MusteriGuncelle" method="post">
            <h3>Müşteri Güncelle</h3>

            <div class="formContentLeft">
                <input type="hidden" name="kisiId" value="@Model.kisiId"/>
                
                <input type="hidden" name="musteriNo" value="@Model.musteriNo" />

                <div class="form-group">
                    <label for="isim">Ad:</label>
                    <input class="form-control" id="isim" name="isim" type="text" autofocus="autofocus" value="@Model.isim">
                </div>

                <div class="form-group">
                    <label for="sifre">Şifre:</label>
                    <input class="form-control" id="sifre" name="sifre" type="text" value="@Model.sifre">
                </div>

                <div class="form-group">
                    <label for="telefon">Telefon:</label>
                    <input class="form-control" type="text" id="telefon" name="telefon" value="@Model.telefon"/>
                </div>

                <div class="form-group">
                    <label for="mailAdresi">Mail Adresi:</label>
                    <input class="form-control" type="email" id="mailAdresi" name="mailAdresi" value="@Model.mailAdresi"/>
                </div>

                <div class="form-group">
                    <label for="adres">Adres:</label>
                    <textarea class="form-control" id="adres" name="adres">@Model.adres</textarea>
                </div>
            </div>

            <div class="formContentRight">
                <div class="form-group">
                    <label for="resim">Resim:</label>
                    <input type="file" id="resim" name="resim" />
                </div>

                <div class="form-group">
                    <img class="img img-thumbnail img-responsive" alt="Resim yok" height="400" width="400">
                </div>
            </div>

            <div class="form-group">
                <input class="form-control btn buttons" type="submit" value="Kaydet">
            </div>
        </form>
    </div>

</div>