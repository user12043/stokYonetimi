@{
    ViewBag.Title = headers.stokGuncelle;
}

@{ ViewData["activePage"] = 1; }
@Html.Partial("Partial/PersonelMenu")

@using stokYonetimi.Language.ModelLang
@using stokYonetimi.Language.PageContents
@model stokYonetimi.Models.Stok

<div class="main-content">
    <div class="content">

        <form action="/StokData/StokGuncelle" method="post">
            <h3>@headers.stokGuncelle</h3>

            <div class="formContentLeft">
                <input type="hidden" id="stokId" name="stokId" value="@Model.StokId"/>
                <input type="hidden" id="olusturulmaTarihi" name="olusturulmaTarihi" value="@Model.OlusturulmaTarihi"/>

                <div class="form-group">
                    <label for="urunId">@stok.urun:</label>
                    <select id="urunId" class="form-control" name="urunId" size="1">
                        @foreach (var urun in ViewBag.urunler) {
                            string selected = (urun.UrunId == Model.UrunId) ? " selected" : "";

                            <option value="@urun.UrunId"@selected>@urun.Isim</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="miktar">@stok.miktar:</label>
                    <input class="form-control" id="miktar" name="miktar" type="text" value="@Model.Miktar"/>
                </div>

                <div class="form-group">
                    <label for="adetFiyat">@stok.adetFiyat:</label>
                    <input class="form-control" type="text" id="adetFiyat" name="adetFiyat" value="@Model.AdetFiyat"/>
                </div>

                <div class="form-group">
                    <input class="form-control btn buttons" type="submit" value="@commons.set"/>
                </div>
            </div>
        </form>
    </div>

</div>