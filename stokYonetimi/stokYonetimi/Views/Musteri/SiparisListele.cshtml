@{
    ViewBag.Title = "SiparisListele";
}

@{ ViewData["activePage"] = 1; }
@Html.Partial("Partial/MusteriMenu")

@model List<stokYonetimi.Models.Siparis>

<div class="main-content">

    <div class="content">
        <button class="btn buttons addButton btn-lg" onclick="location.href = '/Musteri/SiparisVer'">
            <span class="glyphicon glyphicon-plus-sign"></span>
        </button>
        <table class="table table-bordered listTable">
            <thead>
            <tr>
                <td>Durum</td>
                <td>Ürün Adı</td>
                <td>Miktarı</td>
                <td>Adet Fiyatı</td>
                <td>Ödenen</td>
                <td>Sipariş Tarihi</td>
                <td>İşlemler</td>
            </tr>
            </thead>
            <tbody>

            @foreach (var siparis in Model) {
                <tr>
                    <td>
                        <input type="checkbox" name="" checked="checked">
                    </td>
                    <td>@siparis.Urun.Isim</td>
                    <td>@siparis.Miktar</td>
                    <td>@siparis.Urun.AdetFiyat</td>
                    <td>@siparis.Fiyat</td>
                    <td>@siparis.Tarih</td>
                    <td>
                        <span class="glyphicon glyphicon-edit"></span>
                        <span class="glyphicon glyphicon-minus-sign"></span>
                    </td>
                </tr>
            }

